@model IEnumerable<DataLayer.Models.ProfileModels>
@{
    ViewBag.Title = "Noodler";
}

<div class="jumbotron">
    <h1>Noodler</h1>
    <p class="lead">Noodler is more or less a facebook replica, in the image of the demand specification for the course IK204G.</p>
</div>

<center>
    <div class="row">
        @foreach (var item in Model) {
            <div class="col-md-4">
                <div class="card" style="width:200px">
                    <a href="@Url.Action("Index", "Profile", new { id = item.Id })">
                        <img class="card-img-top" width="200" height="200" src="@Url.Action("RenderProfileImage", "Profile", new { userId = item.Id })" alt="Image Card" style="border-radius: 5px" />
                    </a>
                    <div class="card-body">
                        <a href="@Url.Action("Index", "Profile", new { id = item.Id })">
                            <h4 class="card-title">@item.FirstName @item.LastName</h4>
                        </a>
                        <p class="card-text">@item.Biography</p>
                        @Html.ActionLink(linkText: "View Profile", actionName: "Index", controllerName: "Profile", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "" })
                    </div>
                </div>
            </div>
        }
    </div>
</center>